<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LastGamesController">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: black;">
         <bottom>
            <Button fx:id="backBtn" mnemonicParsing="false" onAction="#backToMain" text="Back" BorderPane.alignment="CENTER" />
         </bottom>
         <center>
            <SplitPane dividerPositions="0.5, 0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0" BorderPane.alignment="CENTER">
              <items>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="Last Games Record" textAlignment="CENTER" textFill="#acb205">
                     <font>
                        <Font name="System Bold" size="25.0" />
                     </font>
                  </Label>
                  <ListView fx:id="listView" prefHeight="200.0" prefWidth="200.0" />
                  <ImageView fitHeight="143.0" fitWidth="189.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/spin.gif" />
                     </image>
                  </ImageView>
              </items>
            </SplitPane>
         </center>
      </BorderPane>
      <ImageView fitHeight="150.0" fitWidth="142.0" pickOnBounds="true" preserveRatio="true" />
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
   </children>
</AnchorPane>
